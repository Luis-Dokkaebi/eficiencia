# Mode: local or remote
MODE=local

# Cameras (JSON array of strings or integers)
CAMERAS_JSON='["rtsp://example.com/stream", 0]'

# Legacy single camera config (used if CAMERAS_JSON is not set)
LOCAL_CAMERA_INDEX=1
REMOTE_CAMERA_URL=rtsp://usuario:contraseña@IP:PUERTO/cam/path

# Database
LOCAL_DB_PATH=data/db/local_tracking.db
REMOTE_DB_URL=mysql://usuario:contraseña@servidor_ip/dbname

# Snapshots
SNAPSHOTS_DIR=data/snapshots

# General
FRAME_SKIP=1
CONFIDENCE_THRESHOLD=0.4

# Face Recognition
FACE_RECOGNITION_TOLERANCE=0.5
FACE_RECOGNITION_MIN_MATCHES=3
VERIFICATION_INTERVAL=30
